Checks: |
  -*,
  clang-diagnostic-*,
  clang-analyzer-*,
  bugprone-redundant-branch-condition,
  bugprone-use-after-move,
  bugprone-bool-pointer-implicit-conversion,
  bugprone-unused-raii,
  bugprone-fold-init-type,
  modernize-*,
  -modernize-use-trailing-return-type,
  -modernize-use-nodiscard,
  -modernize-avoid-c-arrays,
  -modernize-loop-convert,
  misc-redundant-expression,
  misc-unused-*,
  -misc-unused-parameters,
  readability-*,
  -readability-identifier-length,
  -readability-implicit-bool-conversion,
  -readability-magic-numbers,
  -readability-else-after-return,
  -readability-inconsistent-declaration-parameter-name,
  -readability-isolate-declaration,
  -readability-named-parameter,
  -readability-avoid-const-params-in-decls,
  -readability-convert-member-functions-to-static,
  -readability-use-anyofallof,
  portability-simd-intrinsics,
  performance-type-promotion-in-math-fn,
  performance-faster-string-find,
  performance-inefficient-algorithm,
  performance-move-const-arg,
  cppcoreguidelines-naming,
  google-global-names-in-headers,
  google-build-using-namespace,
  google-default-arguments,
  google-explicit-constructor,
  google-readability-braces-around-statements,
  google-readability-casting,
  google-readability-function-size,
  google-readability-namespace-comments,
  google-readability-todo,
  google-runtime-references
WarningsAsErrors: "*"
CheckOptions:
  - key: readability-function-size.LineThreshold
    value: "80"
  - key: readability-function-cognitive-complexity.Threshold
    value: "50"
  - key: cppcoreguidelines-naming.ClassCase
    value: CamelCase
  - key: cppcoreguidelines-naming.StructCase
    value: CamelCase
  - key: cppcoreguidelines-naming.VariableCase
    value: lower_case
  - key: cppcoreguidelines-naming.ConstantCase
    value: UPPER_CASE
  - key: cppcoreguidelines-naming.FunctionCase
    value: camelBack
  - key: cppcoreguidelines-naming.MethodCase
    value: camelBack
  - key: cppcoreguidelines-naming.ParameterCase
    value: lower_case
  - key: cppcoreguidelines-naming.NamespaceCase
    value: lower_case
  - key: cppcoreguidelines-naming.EnumCase
    value: CamelCase
  - key: cppcoreguidelines-naming.EnumConstantCase
    value: UPPER_CASE
  - key: cppcoreguidelines-naming.ClassMemberCase
    value: lower_case
  - key: cppcoreguidelines-naming.ClassMemberSuffix
    value: _
  - key: cppcoreguidelines-naming.ClassStaticMemberCase
    value: UPPER_CASE
  - key: cppcoreguidelines-naming.GlobalConstantCase
    value: UPPER_CASE
  - key: cppcoreguidelines-naming.GlobalFunctionCase
    value: camelBack
  - key: cppcoreguidelines-naming.GlobalVariableCase
    value: lower_case
